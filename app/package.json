{
  "name": "todo",
  "version": "1.0.0",
  "description": "todo app",
  "repository": "https://github.com/xxxkonyi/todo-vert-x3.git",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --content-base public --inline --hot --history-api-fallback",
    "start:prod": "webpack && node server.js",
